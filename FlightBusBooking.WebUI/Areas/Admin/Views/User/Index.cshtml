@using FlightBusBooking.WebUI.Areas.Admin.Models.UserModels;

@{
    Layout = "_Layout";
}
@model List<UserModel>
<h4 class="fw-bold py-3 mb-4">Kullanıcılar</h4>
<div class="card">
    <h5 class="card-header">Kullanıcı Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Hesap Durumu</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>Aktif</td>

                       


                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/User/Edit/@item.Id"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                    <form asp-action="Delete" asp-controller="User" method="post">
                                        <input type="hidden" name="userId" value="@item.Id">
                                        <button class="dropdown-item" type="submit"><i class="bx bx-trash me-2"></i>Sil</button>
                                    </form>

                                </div>
                            </div>
                        </td>
                    </tr>
                },
            </tbody>
        </table>
    </div>

</div>
<div class="mt-3">
    <a class="btn btn-primary" href="/User/Add">Kullanıcı Ekle</a>
</div>
